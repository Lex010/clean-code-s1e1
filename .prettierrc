{
  "useTabs": false,
  "tabWidth": 2,
  "htmlWhitespaceSensitivity": "strict",
  "singleQuote": false,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "proseWrap": "always",
        "htmlWhitespaceSensitivity": "ignore",
        "tabWidth": 2,
        "printWidth": 80
       }
    },
      {
        "files": ["*.css"],
        "options": {
          "printWidth": 80,
        "semi": true,
        "trailingComma": "none",
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "proseWrap": "always"
        }
    }
  ]
}
